<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<link rel="stylesheet" href="css/global.css">
	<link rel="stylesheet" href="css/edit.css">
	<title>Editor</title>
	<script src="js/edit.js" type="module"></script>
</head>

<body>
	<header><%- include('header.ejs'); %></header>
	<main>
		<h1>Tutorial Editor</h1>
		<form id="form" method="POST" action="/api/endpoint">
			<div class="tutorial-header">
				<div class="tutorial-name">
					<label for="name">Name</label>
					<input type="text" id="name" name="name" value="Unnamed Tutorial">
				</div>
				<div class="buttons">
					<button id="save" type="button">Save</button>
					<button id="delete" type="button">Delete</button>
				</div>
			</div>
			<div id="status-message"></div>
			<div class="description-container">
				<label for="description">Description</label>
				<div class="description-editor-container">
					<input type="textarea" id="description" name="description" hidden>
				</div>
			</div>
			<div class="views-container">
				<div class="views-header">
					<h3>Views</h3>
					<button id="add_view" type="button">Add</button>
				</div>
				<div id="views"></div>
			</div>
			<div class="properties-container">
				<div class="properties-header">
					<h3>Properties</h3>
					<button id="add_property" type="button">Add</button>
				</div>
				<div id="properties"></div>
			</div>
		</form>
	</main>
	<footer><%- include('footer.ejs'); %></footer>
</body>

</html>