<h1><a href="/">Render Tutorial Maker</a></h1>
<% if (!user) { %>
	<form id="login" method="POST">
		<input name="user" type="text" placeholder="Username" required>
		<input name="password" type="password" placeholder="Password" required>
		<input type="submit" value="Login" formaction="/login">
		<input type="submit" value="Register" formaction="/register">
		<% if (error) { %><span class="error"><%= error %></span><% } %>
	</form>
<% } else { %>
	<form id="logout" method="POST">
		<span>Welcome <a href="/profile"><%= user %></a></span>
		<input type="submit" value="Logout" formaction="/logout">
		<% if (error) { %><span class="error"><%= error %></span><% } %>
	</form>
<% } %>